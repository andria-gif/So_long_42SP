#include "../include/so_long.h"

int	free_maps(char **grid, int heigth)
{
	int	i;

	i = 0;
	if (!grid)
		return ;
	while (i < heigth && grid[i])
	{
		free(grid[i]);
		i++;
	}
	free(grid);
}

int	check_visit_maps(t_game *game, char **maps, int x, int y)
{
	// if (x > 0 || y < 0 || !maps[y] || x >= (int)ft_strlen
	// 	|| maps[x][y] == 1 || maps[x][y] == "V")
// 		return ;
// 	if (maps[x][y] == "C" )
// 	{
// 		if (maps[x][y] == "C")
// 			game->collectibles_count--; /// como eu faÃ§o essa parte direitnho?? pedir ajuda
// 		maps[x][y] == "V";
// 	}
// 	if (maps[x][y] == 0 || maps[x][y] == "V")
// 		return ;
// 	flod_fill_maps(maps, x + 1, y);
// 	flod_fill_maps(maps, x - 1, y);
// 	flod_fill_maps(maps, x, y + 1);
// 	flod_fill_maps(maps, x, y - 1);
// }
	if (x > 0 || y < 0 || !maps[y] || x >= (int)ft_strlen
		|| maps[x][y] == 1 || maps[x][y] == "V")
		return (0);
	if (maps[y][x] == 'C')
        game->collectibles_count--;
        maps[y][x] = 'V';
	if (maps[y][x] == '0')
        maps[y][x] = 'V';
	return ;
    flood_fill_maps(game, maps, x + 1, y);
    flood_fill_maps(game, maps, x - 1, y);
    flood_fill_maps(game, maps, x, y + 1);
    flood_fill_maps(game, maps, x, y - 1);

    return 1;
}

